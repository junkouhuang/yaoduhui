page {
  border: none;
}

.tips-msg {
  height: 60rpx;
  background-color: #E3F1FC;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 40rpx;

}

.tips-msg image {
  width: 30rpx;
  height: 30rpx;
}

.tips-msg .tips {
  color: #333;
  font-size: 24rpx;
  margin-left: 12rpx;

}

.tips-msg .tips .quotation-symbol {
  margin: 0 15rpx;
}


.symbol {
  color: #FF0000;
  line-height: 40rpx;
}

.information-title {
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  color: #333;
  position: relative;
  font-weight: bold;
}

.information-title::after {
  width: 3px;
  height: 30rpx;
  position: absolute;
  left: 50rpx;
  top: 50%;
  transform: translate(-50%, -50%);
  content: '';
  background: #3996E1;
}

.essential-information {
  background-color: #fff;
  border-radius: 15px;
  box-sizing: border-box;
  padding: 0 34rpx 0 42rpx;
}

.essential-information .information-item {
  height: 96rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.essential-information .information-item::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 0;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.essential-information .information-item .right {
  width: 16rpx;
  height: 28rpx;
}

.essential-information .information-item:last-child {
  border-bottom: none
}

.information-item .picker {
  font-size: 28rpx;
  color: #C2C2C2
}

.information-item .select-address {
  font-size: 28rpx;
  color: #707070;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
  margin-right: 14rpx;
}

.information-item .exit {
  color: #333;
  text-align: left;
}

.information-item .item-text {
  display: felx;
  align-items: center;
  font-size: 28rpx;
  width: 180rpx;
}

.information-item .qrcode {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}

.information-item .item-text .item-name {
  color: #333;
}

.information-item input {
  color: #333;
  font-size: 28rpx;
  flex: 1
}

.modo-operation {
  background-color: #fff;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-top: 40rpx;
  margin-top: 18rpx;
  padding-bottom: 20rpx;
}

.modo-operation .mode-title {
  display: flex;
  align-items: cener;
  font-size: 28rpx;
  height: 30rpx;
  color: #333333;
}

.modo-operation .select-list {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.modo-operation .select-list .options-item {
  width: 222rpx;
  height: 66rpx;
  border-radius: 60px;
  border: 1px solid #868686;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #868686;
  margin-right: 15rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.modo-operation .select-list .active {
  color: #fff;
  background: linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
  border-image: -webkit-linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
  border-image: -moz-linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
  border-image: -o-linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
  border-image: linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
}

.modo-operation .select-list .active1 {
  color: #CCC;
  background: #F0F0F0;
}

.next-step {
  width: 690rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(4, 190, 254, 1), rgba(68, 129, 235, 1));
  box-shadow: 0 0.206667rem 0.26rem 0 rgba(67, 115, 234, .3);
  margin-left: 30rpx;
  margin-top: 25rpx;
  text-align: center;
  color: #fff;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.next-step.disable {
  opacity: 0.54
}