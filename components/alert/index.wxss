/* components/confirm.wxss */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.3);
  z-index: 5;
}

.icon {
  width: 116rpx;
  height: 116rpx;
  margin-bottom: 60rpx;
}

.confirm {
  width: 600rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  padding: 0 34rpx;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 1);
  border-radius: 26rpx;
  padding-top: 60rpx;
  overflow: hidden;
  z-index: 6;
  text-align: center;
}

.confirm .title {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

rich-text {
  margin-bottom: 84rpx;
}

.btn {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  position: relative;
  display: flex;
  position: relative;
  margin-top: 84rpx;
}

.btn::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 0;
  top: 0;
  left: 0;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.btn .cancel {
  color: #333;
  flex: 1;
  position: relative;
}

.btn .cancel::after {
  position: absolute;
  content: '';
  width: 2rpx;
  height: 100rpx;
  background: #ebedf0;
  right: 0;
  transform: scaleX(0.5);
}

.btn .yes {
  color: #3996E1;
  flex: 1;
}