page {
  border:none;
}
.header {
  background: linear-gradient(132deg, #04BEFE 0%, #4481EB 100%);
  height: 222rpx;
  z-index: 999;
  font-size: 30rpx;
  display: flex;
  color: #fff;
  padding: 0 40rpx 80rpx;
  align-items: center;
}
.gan {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.logo {
  margin-left: 20rpx;
}
.logo .zt {
  font-size: 36rpx;
  font-weight: bold;
}
.logo .time {
  font-size: 30rpx;
  margin-top: 18rpx;
}
.userInfo {
  padding: 36rpx 26rpx;
  color: #333333;
  font-size: 30rpx;
  border-radius: 26rpx;
  background-color: #ffffff;
  position: relative;
  top: -100rpx;
  margin: 0 20rpx;
}
.userInfo .name_phone {
  display: flex;
  color: #333;
}
.userInfo .consignee {
 max-width: 400rpx;
 text-overflow: ellipsis;
 white-space: nowrap;
 overflow: hidden;
 font-size: 32rpx;
 font-weight: bold;
}
.userInfo .consigneePhone {
 margin-left: 32rpx;
 color: 30rpx;
 font-weight: bold;
}
.userInfo .shippingAddress {
  margin-top: 26rpx;
}
.content {
  position: relative;
  top: -100rpx;
  padding-bottom: 100rpx;
}
.item {
  border-top: 18rpx solid #f5f5f5;
  overflow: hidden;
  margin: 0 20rpx;
  border-radius: 26rpx;
}

.item .contian {
  background-color: #fff;
  border-radius: 26rpx;
}

.psf {
  color: #333;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 36rpx 28rpx;
  border-bottom: 2rpx solid rgba(244, 244, 244, 1);
}

.psf .supplierName {
  display: flex;
  align-items: center;
  flex: 1;
}

.psf .supplierName view {
  max-width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-weight: bold;
}

.psf .supplierName image {
  width: 16rpx;
  height: 28rpx;
  margin-left: 16rpx;
}

.goods {
  padding: 34rpx 20rpx 0 20rpx;
  background-color: #fff;
}

.good_item {
  display: flex;
}

.goods .picture {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
}

.goods .picture .imgUrl {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 16rpx;
  background-size: cover;
  background-position: center;
  position: relative;
}

.goods .picture .imgUrl image {
  width: 56rpx;
  height: 26rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.goods .xq {
  display: flex;
  flex-direction: column;
  margin-left: 34rpx;
}

.goods .xq .mc {
  color: #333;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}

.goods .xq .gs,
.goods .xq .spec {
  color: #858585;
  font-size: 26rpx;
  margin-top: 14rpx;
  display: flex;
}

.goods .xq .gs view{
  background-color: #f2f2f2;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  margin-right: 12rpx;
  color: #868686;
  border-radius: 6rpx;
}

.goods .xq .gs .manufacturer {
  width: 324rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods .xq .jg {
  color: #858585;
  font-size: 26rpx;
  margin-top: 14rpx;
}

.goods .xq .jg text {
  font-size: 26rpx;
}

.goods .xq .gg {
  margin-top: 16rpx;
  display: none;
}

.goods .xq .gg .spec {
  color: #868686;
  border-radius: 20rpx;
  background-color: #f2f2f2;
  padding: 0 16rpx;
  font-size: 20rpx;
  margin-top: 20rpx;
  margin-right: 14rpx;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
}

.goods .xq .gg text {
  color: #868686;
  border-radius: 60rpx;
  background-color: #f2f2f2;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  margin-top: 20rpx;
  margin-right: 14rpx;
}

.line {
  height: 2rpx;
  background-color: #fff;
}

.line view {
  background-color: #f5f5f5;
  height: 2rpx;
}
.bt {
  text-align: right;
  background-color: #fff;
  padding: 18rpx 0 26rpx;
  display: flex;
  justify-content: space-between;
}

.bt .cgl {
  color: #333;
  font-size: 26rpx;
  margin-right: 40rpx;
}

.bt .yf {
  color: #333;
  font-size: 26rpx;
}

.bt .yf .rmb {
  font-size: 26rpx;
  color: #333;
}

.bt .yf .xj {
  font-size: 26rpx;
  color: #333;
}
.audit {
  overflow: hidden;
  margin-bottom: 30rpx;
}

.audit .o-audit {
  font-size: 24rpx;
  background: #F3F4F5;
  padding: 20rpx;
  border-radius: 16rpx;
  float: left;
}

.audit .o-audit .fail {
  color: #FD1717;
}

.audit .o-audit .reson {
  color: #333;
}
.good-b {
  color: #333;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  margin: 24rpx 20rpx 0 20rpx;
}

.good-b:last-child {
  padding-bottom: 40rpx;
  border: 0 0 26rpx 26rpx;
}

.good-b text:first-child {
  color: #858585;
}
.realPay {
  display: flex;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
  padding: 24rpx 26rpx 28rpx 46rpx;
  overflow: hidden;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  border-top: 2rpx solid rgba(244, 244, 244, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  align-items: center;
  background-color: #fff;
}
.cancelRefund {
  color: #707070;
  color: 28rpx;
}
.realPay .pay {
  font-size: 26rpx;
  color: #333;
}
.realPay .pay text {
  color: #FF6C00;
  font-size: 34rpx;
}

.status .left {
  float: left;
  color: #FF6C00;
}

.status .operate {
  margin-left: 16rpx;
}

.status .operate:last-child {
  margin-left: 0;
}

.status .right {
  color: #333333;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 2rpx solid #333333;
  padding: 14rpx 28rpx;
  float: right;
}

.status .applyRefund {
  color: #333333;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 2rpx solid #333333;
  padding: 14rpx 28rpx;
  float: right;
  margin-right: 18rpx;
}

.status .confirmPay1 {
  color: #333333;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 2rpx solid #333333;
  padding: 14rpx 28rpx;
  float: right;
  margin-right: 18rpx;
}

.confirmPay2 {
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 14rpx 28rpx;
  float: right;
  background: #3996E1;
  align-items: center;
}

.status .right_confirm_pay {
  font-size: 24rpx;
  border-radius: 30rpx;
  background: #3996E1;
  padding: 14rpx 28rpx;
  float: right;
  color: #fff;
}

.handleRefund2 {
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 14rpx 28rpx;
  float: right;
  background: #3996E1;
}