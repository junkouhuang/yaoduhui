/* components/confirm.wxss */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.3);
}

.confirm {
  width: 630rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 1);
  border-radius: 26rpx;
  padding-top: 60rpx;
  overflow: hidden;
}

.confirm .title {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.confirm .content {
  position: relative;
}

.confirm .textarea {
  border-radius: 16rpx;
  margin: 16rpx auto 40rpx;
  background: #F5F5F5;
  padding: 20rpx;
  height: 240rpx;
  width: 510rpx;
  font-size: 28rpx;
}

.confirm .text {
  position: absolute;
  bottom: 20rpx;
  right: 64rpx;
  font-size: 26rpx;
  color: #B2B2B2;
}

.btn {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  position: relative;
  display: flex;
  position: relative;
}

.btn::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 0;
  top: 0;
  left: 0;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.btn .cancel {
  color: #333;
  flex: 1;
  position: relative;
}

.btn .cancel::after {
  position: absolute;
  content: '';
  width: 2rpx;
  height: 100rpx;
  background: #ebedf0;
  right: 0;
  transform: scaleX(0.5);
}

.btn .yes {
  color: #3996E1;
  flex: 1;
}