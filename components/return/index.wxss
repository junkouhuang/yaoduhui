.header {
  width: 100%;
  color: #ffffff;
  text-align: center;
  height: 200rpx;
  z-index: 999;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.header .left {
  width: 34rpx;
  height: 34rpx;
  margin-left: 18rpx;
}
.header .text {
  float: left;
  margin-left: 3%;
  font-size: 30rpx;
}

.mask {
  position: fixed;
  z-index: 2;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog {
  width: 640rpx;
  margin: 0 auto;
  position: fixed;
  z-index: 5000;
  top: 50%;
  left: 16px;
  right: 16px;
  -webkit-transform: translate(0, -50%);
  transform: translate(0, -50%);
  background: #fff;
  text-align: center;
  border-radius: 12px;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  max-height: 90%;
}

.dialog__bd {
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 32px 24px;
  font-size: 17px;
  line-height: 1.4;
  word-wrap: break-word;
  -webkit-hyphens: auto;
  hyphens: auto;
  color: rgba(0,0,0,0.5);
  font-weight: 700;
}

.dialog__ft {
  position: relative;
  line-height: 56px;
  min-height: 56px;
  font-size: 17px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.dialog__btn_default {
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: rgba(0,0,0,0.9);
  font-weight: 700;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.dialog__btn_primary {
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #576b95;
  font-weight: 700;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}