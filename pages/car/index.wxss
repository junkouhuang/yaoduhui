page {
  border:none
}
.car {
  height: 100%;
}
.car .title {
  padding: 30rpx 36rpx;
  color: #333;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #f5f5f5;
  z-index: 3;
}


.car .car_container {
  margin-top: 110rpx;
  padding-bottom: 140rpx;
}

.car .list {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 26rpx;
  overflow: hidden;
}

.car .list .enterpriseName {
  display: flex;
  padding: 23rpx 28rpx 26rpx;
  border-bottom: 2rpx solid rgba(244, 244, 244, 1);
}

.car .list .enterpriseName .name {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.car .list .enterpriseName .enterpriseName_right {
  font-size: 26rpx;
  color: #808080;
}

.car .list .enterpriseName .enterpriseName_right .minimumPurchasePrice {
  margin-top: 16rpx;
}

.car .item {
  padding: 22rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.car .content {
  margin-left: 12rpx;
  flex: 1;
}

.car .line {
  height: 2rpx;
  margin: 10rpx 0 0;
  position: relative;
}

.car .line::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 20rpx;
  bottom: 0;
  left: 20rpx;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.car .radio {
  width: 50rpx;
  display: flex;
  align-items: center;
}

.car .radio .circular {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #ABABB4;
  border-radius: 50%;
}

.car .radio image {
  width: 34rpx;
  height: 34rpx;
}

.order-item {
  width: 100%;
  display: flex;
  position: relative;
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: #ee0a24; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  

.car .img .imgUrl {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 10rpx;
  background-size: cover;
  background-position: center;
  position: relative;
}

.car .img .imgUrl image {
  width: 56rpx;
  height: 26rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.car .slider {
  flex: 1;
}

.car .slider .name {
  font-weight: bold;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.car .content .producerName,
.car .content .spec {
  color: #808080;
  font-size: 26rpx;
  margin-top: 16rpx;
}


.car .content .left {
  flex: 1;
}

.car .content .bottom {
  display: flex;
  position: relative;
}

.car .price {
  color: #ff6c00;
  font-size: 30rpx;
  margin-top: 14rpx;
}

.car .price text {
  font-size: 24rpx;
}

.car .right {
  display: flex;
  align-items: center;
}

.car .num {
  display: flex;
  width: 180rpx;
  border-radius: 6rpx;
  color: #868686;
  padding: 0;
}

.car .right .num .sub {
  width: 48rpx;
  height: 56rpx;
  line-height: 0;
  font-size: 40rpx;
  text-align: center;
  padding: 0;
  border: 1px solid rgba(229, 229, 229, 1);
  color: #b6b6b6;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px 0px 0px 6px;
}

.car .right .num .sub image {
  width: 22rpx;
  height: 22rpx;
}

.car .right .num input {
  flex: 1;
  height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  border-top: 1px solid rgba(229, 229, 229, 1);
  border-bottom: 1px solid rgba(229, 229, 229, 1);
  padding: 0 8rpx;
}

.car .right .num .add {
  width: 48rpx;
  height: 56rpx;
  line-height: 0;
  font-size: 40rpx;
  text-align: center;
  padding: 0;
  border-radius: 0px 6px 6px 0px;
  color: #b6b6b6;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(229, 229, 229, 1);
}

.car .right .num .add image {
  width: 22rpx;
  height: 22rpx;
}

.car .right .dw {
  height: 46rpx;
  line-height: 46rpx;
  color: #868686;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.btn {
  width: calc(100vw - 52rpx);
  height: 98rpx;
  display: flex;
  padding: 0 26rpx;
  position: fixed;
  bottom: 0;
  align-items: center;
  background-color: #fff;
  justify-content: space-between;
  z-index: 2;
}

.btn .radio1 {
  width: 150rpx;
}

.btn .radio1 label {
  display: flex;
  align-items: center;
  color: #333;
}

.car .radio1 .circular {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #ABABB4;
  border-radius: 50%;
}

.car .radio1 image {
  width: 34rpx;
  height: 34rpx;
}

.btn .radio1 text {
  margin-left: 4rpx;
  color: #333;
  font-size: 26rpx;
}

.btn .total {
  flex: 1;
  text-align: right;
  padding-right: 28rpx;
  font-size: 24rpx;
}

.btn .total .t1 {
  color: #ff6c00;
}

.btn .total .t2 {
  color: #ff6c00;
  font-size: 32rpx;
}

.btn .submit {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 60rpx;
  opacity: 0.3;
  /* background-image: linear-gradient(to right,#f09819, #ff5858);
  box-shadow: 0 0.206667rem 0.26rem 0 rgba(240,152,25,.3); */
  background-image: linear-gradient(to right, #04befe, #4481eb);
  box-shadow: 0 0.206667rem 0.26rem 0 rgba(67, 115, 234, 0.3);
}

.btn .submit.active {
  opacity: 1;
}

.btn .delete {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 60rpx;
  background-image: linear-gradient(to right, #ff5040, #ec1212);
  opacity: 0.3;
}

.btn .delete.active {
  opacity: 1;
}

.default {
  height: calc(100vh);
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.default image {
  width: 288rpx;
  height: 180rpx;
}

.default text {
  margin-top: 120rpx;
  color: #615f60;
  font-size: 28rpx;
}

.default .go {
  width: 216rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 100rpx;
  border-radius: 60rpx;
  background-image: linear-gradient(to right, #04befe, #4481eb);
  box-shadow: 0 0.206667rem 0.26rem 0 rgba(67, 115, 234, 0.3);
}