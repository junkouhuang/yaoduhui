/* pages/member/open-complete/index.wxss */
.content{
  padding-top: 300rpx;
  text-align: center;
  border-top: 1px solid #DCDCDC;
}

.content image{
  width: 115.5rpx;
  height: 115.5rpx;
}

.content .title{
  color: #333333;
  font-size: 34rpx;
  margin: 65rpx 0 30rpx;
  font-weight: 400;
}

.content .detail{
  color: #6D6D6D;
  font-size: 28rpx;
}

.content .btn{
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #0266C4;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin: 235rpx auto;
  border-radius: 15rpx;
}

.transferInfo{
  display: flex;
  flex-direction: column;
  margin: 10rpx 30rpx;
  color: #333333;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
}

.transferInfo-text{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  border-bottom: 1rpx solid #DCDCDC;
  height: 70rpx;
  align-items: center;
}