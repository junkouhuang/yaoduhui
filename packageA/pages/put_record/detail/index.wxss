/* pages/put_record/detail/index.wxss */
.medical-care{
  display: flex;
  flex-direction: column;
  border-top:1px solid #DCDCDC;
}

.medical-care .medical-item{
  box-sizing: border-box;
  padding:0 42rpx 35rpx 35rpx;
  background-color: #fff;
  display: flex;
  justify-content:space-between;

}

.medical-item image{
  width:155rpx;
  height:135rpx;
}

.medical-item .medical-left{
  display: flex;
  flex-direction: column;
  padding-top:40rpx;
}

.medical-left .shipping-companies{
  font-size:24rpx;
  line-height:24rpx;
  color:#868686;
  margin-top:25rpx;
}
.medical-item .medical-left .definition-mode{
  font-size:26rpx;
  color:#333333;
  display: flex;
  align-items:center;
}

.medical-item .medical-left .definition-mode .definition{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width:320rpx;
}

.medical-left .definition-mode .mode{
  margin-left:20rpx;
  color:#868686;
  font-size:22rpx;
  line-height:16rpx;
}

.medical-left .name-phone{
  margin-top:25rpx;
  display: flex;
  align-items:center;
  font-size:30rpx;
  color:#333;
}

.medical-left .name-phone .phone{
  margin-left:80rpx;
  font-size:30rpx;
}

.medical-left .address{
  margin-top:25rpx;
  font-size:26rpx;
  color:#333;
  max-width: 250px
}

.medical-left .reason{
  color:#EA0505;
  font-size:26rpx;
  margin-top:25rpx;
}

.message-detail{
  background-color: #fff;
  border-radius: 8rpx;
  margin-top:22rpx;
  box-sizing: border-box;
  padding:0 40rpx 20rpx 35rpx;
}

.message-detail .title{
  display: block;
  height:90rpx;
  color:#333333;
  font-size:28rpx;
  line-height:90rpx;
  border-bottom:1rpx solid #DCDCDC;
}

.message-detail .image-list{
  margin-top:37rpx;
  display: flex;
  flex-wrap: wrap;
  
}

.message-detail .image-list image{
  width:180rpx;
  height:180rpx;
  margin-bottom:30rpx;
  margin-right:45rpx;
}
