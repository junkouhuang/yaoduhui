
.integral-msg{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding:34rpx 38rpx 0 38rpx;
  border-top:1rpx solid #DCDCDC;
}

.integral-msg .userinfo-msg{
  height:124rpx;
  margin-top:34rpx;
  display: flex;
  align-items:center;
}

.integral-msg .userinfo-msg image{
  width:120rpx;
  height:120rpx;
}

.integral-msg .userinfo-msg .userinfo-detail{
  margin-left:15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}

.userinfo-msg .userinfo-detail .name{
  color:#333;
  font-size:28rpx;
  line-height:28rpx;
}

.userinfo-msg .userinfo-detail .enterprise{
  color:#333;
  font-size:24rpx;
  line-height:24rpx;
  margin-top:20rpx;
}

.integral-msg .integral-detail{
  width:675rpx;
  height:400rpx;
  position: relative;
  margin-top:20rpx;
}

.integral-detail .bg{
  width:100%;
  height:100%;
  position: absolute;
}

.integral-detail .integral-message{
  display: flex;
  justify-content: space-between;
  position: absolute;
  z-index: 1;
  width:100%;
  height:100%;
  box-sizing: border-box;
  padding:37rpx 40rpx;
}

.integral-detail .integral-message .message-left{
  display: flex;
  flex-direction: column;
}

.integral-message .message-left .available{
  font-size:28rpx;
  color:#fff;
  line-height:28rpx;
}

.integral-message .message-left .fraction{
  font-size:50rpx;
  color:#fff;
  line-height:50rpx;
  margin-top:26rpx;
}

.integral-message .message-left .frozen{
  font-size:28rpx;
  color:#fff;
  line-height:28rpx;
  margin-top:34rpx;
}

.integral-message .message-left .branch{
  font-size:28rpx;
  color:#fff;
  line-height:28rpx;
  margin-top:28rpx;
}

.integral-message .message-right{
  display: flex;
  align-items: center;
  height:30rpx;
  margin-top:53rpx;
}

.integral-message .message-right image{
  width:14rpx;
  height:25rpx;
}

.integral-message .message-right text{
  color:#fff;
  font-size:28rpx;
  margin-right:18rpx;
}


.operation-list{
  background-color: #fff;
  box-sizing: border-box;
  padding:35rpx 0 30rpx 83rpx;
  margin-top:24rpx;
  display: flex;
}

.operation-list .operation-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width:60rpx;
  margin-right:143rpx;
}

.operation-list .operation-item image{
  width:60rpx;
  height:55rpx; 
}

.operation-list .operation-item text{
  font-size:30rpx;
  color:#333;
  line-height:30rpx;
  margin-top:20rpx;
}