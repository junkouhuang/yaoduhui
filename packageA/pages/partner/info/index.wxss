.ps-tips {
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 36rpx 28rpx;
}

.ps-tips .title {
  font-size: 30rpx;
  color: #333;
}

.ps-tips .msg {
  margin-top: 26rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #707070;
}

.ps-tips .msg text {
