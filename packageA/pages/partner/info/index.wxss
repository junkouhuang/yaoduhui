.upload-message {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding-top: 34rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.upload-message .title {
  padding-left: 26rpx;
  font-size: 30rpx;
  color: #333;
}

.upload-message .title text {
  color: #FF0000;
}

.upload-message .idcard-msg {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 68rpx;
  margin-top: 46rpx;
  flex-wrap: wrap;
}

.upload-message .idcard-msg .idcard-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 46rpx;
  position: relative;
}

.upload-message .idcard-msg .idcard-item image {
