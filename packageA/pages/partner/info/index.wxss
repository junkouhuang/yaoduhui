/* pages/member/real-name/index.wxss */

.real-page {
  box-sizing: border-box;
  padding-bottom: 60rpx;
}

.real-page .real-user {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #f4f4f4;
}

.real-page .real-user .title,
.real-page .type .title {
  height: 78rpx;
  padding-left: 26rpx;
  font-size: 26rpx;
  color: #707070;
  line-height: 78rpx;
  border-top: 1rpx solid #f4f4f4;
}

.real-page .real-user .real-shell,
.real-page .type .real-shell {
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.real-user .real-shell .real-item,
.type .real-shell .real-item {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.real-user .real-shell .real-item::after,
.type .real-shell .real-item::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 0;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.real-user .real-shell .real-item .left,
.type .real-shell .real-item .left {
  font-size: 28rpx;
  color: #333;
}

.real-user .real-shell .real-item .left text,
.type .real-shell .real-item .left text {
  color: #FF0000;
}

.real-user .real-shell .real-item input {
  width: 400rpx;
  height: 90%;
  text-align: right;
  font-size: 28rpx;
  border: none;
  flex: 1;
}

.type .real-shell .real-item  .enterpriseName {
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  font-size: 28rpx;
}

.dot {
  width: 30rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.type {
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

