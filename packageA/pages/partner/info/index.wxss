  flex-direction: column;
  align-items: center;
}

.ps-tips .image-list .image-item image {
  width: 164rpx;
  height: 120rpx;
}

.ps-tips .image-list .image-item text {
  font-size: 20rpx;
  color: #333;
  margin-top: 14rpx;
}

