
.customer-page{
  display: flex;
  flex-direction: column;
  height:100%;
}

.search-enterprise{
  background-color: #fff;
  box-sizing: border-box;
  padding:17rpx 36rpx 0;
}

.search-enterprise .search-shell{
  width:678rpx;
  height:72rpx;
  border-radius: 36rpx;
  border:1rpx solid rgba(134,134,134,1);
  box-sizing: border-box;
  padding-left:20rpx;
  display: flex;
  align-items:center;
}

.search-shell image{
  width:60rpx;
  height:60rpx;
}

.search-shell input{
  font-size:30rpx;
  margin-left:25rpx;
  width:570rpx;
}

.search-shell .close-shell{
  width:34rpx;
  height:34rpx;
  border-radius: 50%;
  background-color: #b2b2b2;
  display: flex;
  justify-content: center;
  align-items:center;
  position: absolute;
  right:65rpx;
  z-index:10;
}

.search-shell .close{
  width:15rpx;
  height:15rpx;
}

.search-enterprise .tabble-toggle{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding:0 140rpx;
  height:84rpx;
  position: relative;
}

.tabble-toggle .toggle-item{
  font-size:30rpx;
  color:#333;
  line-height:84rpx;
  height:100%;
}

.tabble-toggle .line{
  width:90rpx;
  height:5rpx;
  background: linear-gradient(90deg,rgba(4,190,254,1),rgba(68,129,235,1));
  position: absolute;
  /* left:140rpx; */
  bottom:0;
  transition: 0.3s all;
}

.medical-care{
  display: flex;
  margin-top:20rpx;
  flex-direction: column;
  flex:1
}

.medical-care .medical-item{
  box-sizing: border-box;
  padding:35rpx 42rpx;
  background-color: #fff;
  display: flex;
  justify-content:space-between;
  margin-bottom:20rpx;
  align-items: center;
}

.medical-item image{
  width:110rpx;
  height:110rpx;
}

.medical-item .medical-left{
  display: flex;
  flex-direction: column;
}

.medical-item .medical-left .definition-mode{
  margin-bottom: 16rpx;
  font-size:26rpx;
  color:#333333;
  display: flex;
  align-items:center;
}

.medical-item .medical-left .definition-mode .definition{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width:320rpx;
}

.medical-left .definition-mode .mode{
  margin-left:20rpx;
  color:#868686;
  font-size:22rpx;
  line-height:16rpx;
}

.medical-left .name-phone{
  margin-top:6rpx;
  display: flex;
  align-items:center;
  font-size:24rpx;
  color:#808080;
}

.medical-left .name-address {
  width: 400rpx;
}

.medical-left .auditDesc {
  color: #FF0000;
  font-size:20rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}

.medical-left .auditDesc .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  background-color: #FF0000;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.medical-left .auditDesc .name {
  width: 400rpx;
}

.medical-left .createTime {
  color: #808080;
  font-size:20rpx;
  margin-top: 12rpx;
  margin-left: 10rpx;
}

.medical-left .name-phone image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 40rpx;
}

.medical-left .name-phone .phone{
  margin-left:80rpx;
  font-size:30rpx;
}

.medical-left .address{
  margin-top:25rpx;
  font-size:26rpx;
  color:#333;
  max-width: 250px
}

.medical-left .shipping-companies{
  font-size:24rpx;
  line-height:24rpx;
  color:#868686;
  margin-top:25rpx;
}

.medical-left .reason{
  color:#EA0505;
  font-size:26rpx;
  margin-top:25rpx;
}



