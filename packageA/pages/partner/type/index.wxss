/* pages/partner/type/index.wxss */
.type {
  display: flex;
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 20rpx 0 40rpx 0;
}
.platform,.enterprise {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.platform image,.enterprise image {
  width: 130rpx;
  height: 130rpx;
}
.platform text,.enterprise text {
  margin-top: 10rpx;
  color: #999999;
  font-size: 28rpx;
}
.platform .active,.enterprise .active {
  color: #3996E1;
}
