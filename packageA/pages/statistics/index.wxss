
page {
  background: #fff;
  border:none;
}
.statistics {
  height:440rpx;
  background:rgba(48,148,241,1);
}
.title {
  color: #808080;
  font-size: 24rpx;
  margin: 40rpx 60rpx;
  position: relative;
}
.title::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 0;
  bottom: 0;
  width: 12rpx;
  height: 12rpx;
  top: 50%;
  left: -20rpx;
  transform: translateY(-50%);
  border-radius: 100%;
  background: #4498E0;
}
.header {
  width: 100%;
  color: #ffffff;
  text-align: center;
  height: 140rpx;
  line-height: 140rpx;
  z-index: 999;
  font-size: 30rpx;
}
.header text {
  float: left;
  margin-left: 3%;
  margin-top: 30rpx;
}
.header2 {
  width: 100%;
  color: #ffffff;
  text-align: center;
  height: 200rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.header2 .left {
